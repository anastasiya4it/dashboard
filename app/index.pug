                        .base-navigation 
                            .base-navigation__title Showing data 1 to 8 of  256K entries
                            .base-navigation__pagination
                                - const allPage = 40
                                - const youSeePage = 4
                                - const selectedPage = 1
                                  .pagination
                                    |
                                    |
                                    button.pagination__btn(href="#" title="Go to the first page." value="<") <
                                    - let i = 0
                                    while (i < youSeePage)
                                        button.pagination__btn(href="#" aria-label="Go to page." class=(i === selectedPage-1) ? "pagination__btn--selected" : "")= i + 1
                                        - i++
